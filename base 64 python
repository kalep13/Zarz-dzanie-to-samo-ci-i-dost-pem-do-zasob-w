import base64
def encrypt_decrypt(text, key):
    if key == "encrypt":
        encoded_text = base64.b64encode(text.encode())
        return encoded_text.decode()
    elif key == "decrypt":
        decoded_text = base64.b64decode(text.encode())
        return decoded_text.decode()
    else:
        return "Invalid key"

# przykład użycia

text = "Polska Mistrzem Polski"
encrypted_text = encrypt_decrypt(text, "encrypt")
print(encrypted_text) # ZXhhbXBsZSB0ZXh0
decrypted_text = encrypt_decrypt(encrypted_text, "decrypt")
print(decrypted_text) # example text
